{
  "name": "@jupiterone/graph-snowflake",
  "version": "0.1.2",
  "description": "A graph conversion tool for https://www.snowflake.com/.",
  "license": "MPL-2.0",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "generate-schemas": "yarn typescript-json-schema ./src/client/types.ts \"*\" -o src/client/__generated__/schemas/index.json",
    "prestart": "yarn generate-schemas",
    "start": "j1-integration collect",
    "lint": "eslint . --cache --fix --ext .ts,.tsx",
    "format": "prettier --write '**/*.{ts,js,json,css,md,yml}'",
    "type-check": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:ci": "yarn lint && yarn type-check && yarn test",
    "prebuild": "yarn generate-schemas && yarn test:ci",
    "build": "tsc -p tsconfig.dist.json --declaration",
    "graph": "j1-integration visualize",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@jupiterone/integration-sdk": "^0.16.2",
    "ajv": "^6.12.2",
    "snowflake-sdk": "^1.5.1"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "typescript-json-schema": "^0.42.0"
  }
}
